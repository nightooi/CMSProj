@using CMSProj.Controllers
<!DOCTYPE html>
<html lang="en">
@inject IMenuManger manager
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMSProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMSProj.styles.css" asp-append-version="true" />
    @RenderSection("Headers", false)
</head>
<body>
    @{
        var menu = await manager.RetrieveMenuAsync();
    <header @NavModel.attrib=@menu.Id>
        @Html.Raw(menu.Content)
    </header>
    }

    <partial name="_LoginPartial"/>
    @RenderBody()

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
